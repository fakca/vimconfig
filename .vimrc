filetype on
filetype plugin on
filetype plugin indent on

" Highlight search results
set hlsearch

" Auto indent
set autoindent

" Smart indent
set smartindent

" Tab = 2 spaces
set shiftwidth=2
set softtabstop=2
set tabstop=2
set smarttab

set expandtab " Use spaces instead of tabs

set wrap " Wrap lines

" Line length in google C++ standarts
set colorcolumn=80

" Highlight current line [UNDERLINE]
set cursorline

" Enable syntax highlighting
syntax enable

" Always show current position
set ruler

" Show line number by default
set number relativenumber

" Turn spell check off
set nospell
